@page
@model RecipeBook.WebApp.Pages.Users.Users.UpdateModel
@{
}
<form method="post">
    <div class="form-group">
        <input type="hidden" name="id" class="form-control" value="@Model.User.Id" asp-for="@Model.User.Id">
        <label class="text-light bg-dark p-2 rounded">UserName</label>
        <input type="text" name="username" class="form-control" readonly value="@Model.User.UserName" asp-for="@Model.User.UserName">
    </div>
    <div class="form-group">
        <label class="text-light bg-dark p-2 rounded">Name</label>
        <input type="text" name="name" class="form-control" value="@Model.User.Name" asp-for="@Model.User.Name">
    </div>
    <div class="form-group">
        <label class="text-light bg-dark p-2 rounded">Email</label>
        <input type="email" name="email" class="form-control" value="@Model.User.Email" asp-for="@Model.User.Email">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
