@page
@model RecipeBook.WebApp.Pages.Users.UpdateModel
@{
}
<form method="post">
    <div class="form-group">
        <label>Id</label>
        <input type="text" name="id" class="form-control" value="@Model.User.Id" readonly asp-for="@Model.User.Id">
    </div>
    <div class="form-group">
        <label>UserName</label>
        <input type="text" name="username" class="form-control" value="@Model.User.UserName" asp-for="@Model.User.UserName">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" name="password" class="form-control" value="@Model.User.Password" asp-for="@Model.User.Password">
	</div> 
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="form-control" value="@Model.User.Name" asp-for="@Model.User.Name">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" class="form-control" value="@Model.User.Email" asp-for="@Model.User.Email">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>