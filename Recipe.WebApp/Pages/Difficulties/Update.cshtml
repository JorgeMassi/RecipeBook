@page
@model RecipeBook.WebApp.Pages.Difficulties.UpdateModel
@{
}

<form method="post">
    <div class="form-group">
        <label>Id</label>
        <input type="text" name="id" class="form-control" value="@Model.Difficulty.Id" readonly asp-for="@Model.Difficulty.Id">
    </div>
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="form-control" value="@Model.Difficulty.Name" asp-for="@Model.Difficulty.Name">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
}