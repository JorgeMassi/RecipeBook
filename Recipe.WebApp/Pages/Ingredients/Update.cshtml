@page
@model RecipeBook.WebApp.Pages.Ingredients.UpdateModel
@{
}
<form method="post">
    <div class="form-group">
        <label>Id</label>
        <input type="text" name="id" class="form-control" value="@Model.Ingredient.Id" readonly asp-for="@Model.Ingredient.Id">
    </div>
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="form-control" value="@Model.Ingredient.Name" asp-for="@Model.Ingredient.Name">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>