@page
@model RecipeBook.WebApp.Pages.Logins.LogInModel
@{
}


   <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <form method="post" style="width: 300px; background-color: #ffffff; padding: 20px; border-radius: 5px; box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);">
        <h2 class="text-center mb-4">Login</h2>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" class="form-control" placeholder="Username" asp-for="@Model.User.UserName">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Password" asp-for="@Model.User.Password">
        </div>
        <div>
            <p class="mb-0">
                Don't have an account? <a asp-page="/Users/create" class="text-black-50 fw-bold">Sign Up</a>
            </p>
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
    </form>
</div> 

