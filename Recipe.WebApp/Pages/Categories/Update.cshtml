@page
@model RecipeBook.WebApp.Pages.Categories.UpdateModel
@{
}


<form method="post">
	<div class="form-group">
		<label>Id</label>
		<input type="text" name="id" class="form-control" value="@Model.Category.Id" readonly asp-for="@Model.Category.Id">
	</div>
	<div class="form-group">
		<label>Name</label>
		<input type="text" name="name" class="form-control" value="@Model.Category.Name" asp-for="@Model.Category.Name">
	</div>
	<br />
	<button type="submit" class="btn btn-primary">Submit</button>
</form>
}
