@page
@model RecipeBook.WebApp.Pages.Categories.RetrieveAllModel
@{
}
<br />
<br />

<ul class="list-group">
	@foreach (var category in Model.Categories)
	{
		<li class="list-group-item d-flex justify-content-between align-items-center">
			@category.Name
			<div>
				<a asp-area="" asp-page="/categories/update" asp-route-id="@category.Id" class="btn btn-primary">
					<i class="fa-solid fa-pencil"></i> Edit
				</a>
				<a asp-area="" asp-page="/categories/delete" asp-route-id="@category.Id" class="btn btn-danger">
					<i class="fa-solid fa-trash"></i> Delete
				</a>
			</div>
		</li>
	}
</ul>



@if (Model.SessionUser.IsAdmin)
{
	<form method="post" class="mt-4">
		<div class="form-group">
			<label style ="font-family: 'Arial', sans-serif; font-weight: bold; color: #ffffff; background-color: #333333; padding: 5px;">New Category</label>
			<input type="text" name="name" class="form-control" placeholder="Enter New Category Name" 
			required  asp-for="@Model.Category.Name">
		</div>
		<button type="submit" class="btn btn-primary">Add Category</button>
	</form>
	<br />
}
